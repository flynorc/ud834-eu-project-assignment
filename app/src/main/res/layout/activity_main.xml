<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:layout_above="@+id/footer_text">


    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        tools:context="com.flynorc.userinterfaceproject.MainActivity">

        <!-- logo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:src="@drawable/logo" />

        <!-- header img -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/shots" />


        <!-- address -->
        <TextView
            style="@style/DetailsText"
            android:text="@string/address"
            android:drawableStart="@drawable/ic_map_marker_white_18dp"
            android:drawableLeft="@drawable/ic_map_marker_white_18dp" />


        <!-- opening times -->
        <TextView
            style="@style/DetailsText"
            android:text="@string/opening_hours"
            android:drawableStart="@drawable/ic_alarm_check_white_18dp"
            android:drawableLeft="@drawable/ic_alarm_check_white_18dp" />



        <!-- phone -->
        <TextView
            style="@style/DetailsText"
            android:text="@string/phone"
            android:drawableStart="@drawable/ic_phone_classic_white_18dp"
            android:drawableLeft="@drawable/ic_phone_classic_white_18dp" />

        <!-- description -->
        <TextView
            style="@style/GeneralText"
            android:text="@string/description"/>

        <!-- footer -->
        <TextView
            style="@style/GeneralText"
            android:text="Come join us for some shots!"
            android:textAlignment="center"
            android:textSize="24sp" />
    </LinearLayout>
</ScrollView>


